<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_card_bg"
    android:orientation="vertical"
    android:padding="14dp">

    <TextView
        android:id="@+id/widget_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="笔记热力图"
        android:textColor="#7E746B"
        android:textSize="10sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/widget_total_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#C0564D"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/widget_total_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="总记录"
            android:textColor="#7E746B"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text=""
            android:textSize="0sp" />

        <TextView
            android:id="@+id/widget_range_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最近14天"
            android:textColor="#7E746B"
            android:textSize="10sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/heat_dot_0"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/widget_dot_cool" />
            <ImageView
                android:id="@+id/heat_dot_1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="6dp"
                android:src="@drawable/widget_dot_cool" />
            <ImageView
                android:id="@+id/heat_dot_2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="6dp"
                android:src="@drawable/widget_dot_cool" />
            <ImageView
                android:id="@+id/heat_dot_3"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="6dp"
                android:src="@drawable/widget_dot_cool" />
            <ImageView
                android:id="@+id/heat_dot_4"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="6dp"
                android:src="@drawable/widget_dot_cool" />
            <ImageView
                android:id="@+id/heat_dot_5"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="6dp"
                android:src="@drawable/widget_dot_cool" />
            <ImageView
                android:id="@+id/heat_dot_6"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="6dp"
                android:src="@drawable/widget_dot_cool" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/heat_dot_7"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/widget_dot_cool" />
            <ImageView
                android:id="@+id/heat_dot_8"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="6dp"
                android:src="@drawable/widget_dot_cool" />
            <ImageView
                android:id="@+id/heat_dot_9"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="6dp"
                android:src="@drawable/widget_dot_cool" />
            <ImageView
                android:id="@+id/heat_dot_10"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="6dp"
                android:src="@drawable/widget_dot_cool" />
            <ImageView
                android:id="@+id/heat_dot_11"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="6dp"
                android:src="@drawable/widget_dot_cool" />
            <ImageView
                android:id="@+id/heat_dot_12"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="6dp"
                android:src="@drawable/widget_dot_cool" />
            <ImageView
                android:id="@+id/heat_dot_13"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="6dp"
                android:src="@drawable/widget_dot_cool" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
